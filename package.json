{
  "name": "com.azurgames.cordova.phaser.solitaire",
  "displayName": "Solitaire",
  "version": "0.0.1",
  "description": "Classic game implemented with Cordova+Phaser.",
  "author": "Azur Games",
  "license": "MIT",
  "scripts": {
    "build-android": "export NODE_OPTIONS=--openssl-legacy-provider && cordova build android",
    "browser": "export NODE_OPTIONS=--openssl-legacy-provider && cordova run browser -- --livereload",
    "deploy-android": "adb install ./platforms/android/app/build/outputs/apk/debug/app-debug.apk"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@babel/preset-flow": "^7.18.6",
    "babel-loader": "^8.2.5",
    "babel-preset-modern-browsers": "^15.0.2",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^6.4.1",
    "cordova-android": "^10.1.2",
    "cordova-browser": "^6.0.0",
    "cordova-ios": "^6.2.0",
    "cordova-plugin-applovin-max": "^1.0.9",
    "cordova-plugin-webpack": "^1.0.5",
    "file-loader": "^6.2.0",
    "raw-loader": "^4.0.2",
    "terser-webpack-plugin": "^4.2.3",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.3",
    "webpack-merge": "^5.8.0"
  },
  "cordova": {
    "platforms": [
      "ios",
      "browser",
      "android"
    ],
    "plugins": {
      "cordova-plugin-webpack": {},
      "cordova-plugin-applovin-max": {}
    }
  },
  "dependencies": {
    "phaser": "^3.55.2",
    "phaser3-rex-plugins": "^1.1.82"
  }
}
